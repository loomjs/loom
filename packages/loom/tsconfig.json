{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "jsx": "react",
      "moduleResolution": "node",
      "paths": {
        "*": [
          "node_modules/*",
          "lib/types/*"
        ]
      },
      "lib": [
        "dom", 
        "es2015"
      ]
    },
    "include": [
      "lib/**/*"
    ],
    "exclude": [
      "**/__tests__/**"
    ]
  }